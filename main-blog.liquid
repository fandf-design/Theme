{% comment %}Chronicle list{% endcomment %}
<section class="hero">
  <div class="container">
    <div class="text-meta">Chronicle</div>
    <h1 class="text-display-lg" style="margin:.75rem 0 0;">{{ blog.title }}</h1>
  </div>
</section>

<section style="padding:3rem 0;">
  <div class="container">
    <div class="grid">
      {% for article in blog.articles %}
        <a class="card" href="{{ article.url }}">
          <div class="text-meta">{{ article.published_at | date: "%B %Y" }}</div>
          <div class="text-display" style="font-size:1.6rem;margin:.35rem 0 .6rem;">{{ article.title }}</div>
          <div class="muted">{{ article.excerpt_or_content | strip_html | truncate: 160 }}</div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main blog",
  "settings": []
}
{% endschema %}
